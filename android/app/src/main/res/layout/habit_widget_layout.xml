<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUINTA"
            android:textColor="#a1a1aa"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/06"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="50"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/3 hábitos"
            android:textColor="#a1a1aa"
            android:textSize="10sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Habits List -->
    <LinearLayout
        android:id="@+id/habits_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Habit Item 1 -->
        <LinearLayout
            android:id="@+id/habit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/habit_item_background"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/habit_1_checkbox"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:button="@drawable/custom_checkbox"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/habit_1_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beber 2L de água"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Habit Item 2 -->
        <LinearLayout
            android:id="@+id/habit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/habit_item_background"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/habit_2_checkbox"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:button="@drawable/custom_checkbox"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/habit_2_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exercitar-se"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Habit Item 3 -->
        <LinearLayout
            android:id="@+id/habit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/habit_item_background"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/habit_3_checkbox"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:button="@drawable/custom_checkbox"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/habit_3_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meditar"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>